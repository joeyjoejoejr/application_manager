	  <%= f.label :city %><br />
	  <%= f.password_field :city %>
	 </div>
	 <div class="field">
	  <%= f.label :state %><br />
	  <%= f.password_field :state %>
	 </div>
	 <div class="field">
	  <%= f.label :zip %><br />
	  <%= f.password_field :zip_code %>
	 </div>
	 <div class="field">
	  <%= f.label :phone_number %><br />
	  <%= f.password_field :phone_number %>
	 </div>
	 <div class="actions">
  		<%= f.submit "Submit Application" %>
