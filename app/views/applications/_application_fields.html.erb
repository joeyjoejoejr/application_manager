<%= form_for @application do |f| %>
	 <div class="field">
	  <%= f.label :address %><br />
	  <%= f.text_field :address %>
	 </div>
	  <div class="field">
	  <%= f.label :city %><br />
	  <%= f.text_field :city %>
	 </div>
	 <div class="field">
	  <%= f.label :state %><br />
	  <%= f.text_field :state %>
	 </div>
	 <div class="field">
	  <%= f.label :zip %><br />
	  <%= f.text_field :zip_code %>
	 </div>
	 <div class="field">
	  <%= f.label :phone_number %><br />
	  <%= f.text_field :phone_number %>
	 </div>
	 <div class="actions">
  		<%= f.submit "Submit Application" %>
 	</div>
<% end %>
