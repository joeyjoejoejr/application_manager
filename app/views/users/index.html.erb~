<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= link_to "#{user.first_name} #{user.last_name}", user %>
      <% if current_user.admin? %>
  	 	<%= link_to "delete", user, :method => :delete, :confirm => "You sure?",
                                :title => "Delete #{user.name}" %>
  		<% end %>
    </li>
  <% end %>
</ul>

<%= will_paginate %>
