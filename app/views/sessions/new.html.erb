<h2>Sign in</h2>
<div>
<%= form_for(:session, :url => sessions_path) do |f| %>
	
	<div class = "field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	
	<div class = "field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	
	<div class = "actions">
	 	<%= f.submit "Sign in" %>
	</div>
<% end %>
</div>
<p>Don't have an account? <%=link_to 'Sign up here.', signup_path %>
