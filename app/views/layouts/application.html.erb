<!DOCTYPE html>
<html>
	<head>
		<title><%= title %></title>
		<%= csrf_meta_tag %>
		<%= javascript_include_tag :defaults %>
	</head>
	<body>
	<% if signed_in? %>
	<p><%= link_to "Sign out", signout_path, :method => :delete %></p>
	<% else %>
	<p><%= link_to "Sign in", signin_path %></p>
	<% end %>
	 <div class="container">
	  <section class="round">
	   <%= yield %>
	  </section>
	  <%= debug(params) if Rails.env.development? %>
	 </div>
	</body>
</html>
